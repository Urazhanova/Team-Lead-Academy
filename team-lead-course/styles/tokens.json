{
  "brand": {
    "name": "Site Brand",
    "colors": {
      "primary": "#163F6F",
      "accent": "#7C0004",
      "neutral-0": "#FFFFFF",
      "neutral-50": "#FAFAF7",
      "neutral-100": "#F5F5F3",
      "neutral-200": "#E8E8E5",
      "neutral-300": "#D6D6D2",
      "neutral-400": "#B5B5B1",
      "neutral-500": "#8A8A86",
      "neutral-600": "#6B6B6B",
      "neutral-700": "#4A4A49",
      "neutral-800": "#2F2F2E",
      "neutral-900": "#1B1B1A"
    },
    "typography": {
      "fonts": {
        "serif": "'PT Serif', ui-serif, Georgia, 'Times New Roman', serif",
        "sans": "'PT Sans', ui-sans-serif, system-ui, -apple-system, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, 'Noto Sans', 'Liberation Sans', sans-serif"
      },
      "scale": {
        "display": {
          "size": "60px",
          "lineHeight": "1.1",
          "letterSpacing": "0.02em",
          "weight": 700,
          "family": "serif",
          "transform": "uppercase"
        },
        "h1": {
          "size": "48px",
          "lineHeight": "1.15",
          "letterSpacing": "0.02em",
          "weight": 700,
          "family": "serif",
          "transform": "uppercase"
        },
        "h2": {
          "size": "36px",
          "lineHeight": "1.2",
          "letterSpacing": "0.01em",
          "weight": 700,
          "family": "serif"
        },
        "h3": {
          "size": "28px",
          "lineHeight": "1.3",
          "letterSpacing": "0em",
          "weight": 700,
          "family": "serif"
        },
        "h4": {
          "size": "22px",
          "lineHeight": "1.35",
          "letterSpacing": "0em",
          "weight": 700,
          "family": "serif"
        },
        "body": {
          "size": "18px",
          "lineHeight": "1.6",
          "letterSpacing": "0em",
          "weight": 400,
          "family": "sans"
        },
        "small": {
          "size": "14px",
          "lineHeight": "1.6",
          "letterSpacing": "0.01em",
          "weight": 400,
          "family": "sans"
        },
        "micro": {
          "size": "12px",
          "lineHeight": "1.5",
          "letterSpacing": "0.06em",
          "weight": 600,
          "family": "sans",
          "transform": "uppercase"
        }
      }
    },
    "spacing": {
      "xs": "4px",
      "sm": "8px",
      "md": "12px",
      "lg": "16px",
      "xl": "24px",
      "2xl": "32px",
      "3xl": "48px",
      "4xl": "64px"
    },
    "radii": {
      "sm": "6px",
      "md": "12px",
      "lg": "20px",
      "pill": "9999px"
    },
    "shadows": {
      "none": "none",
      "sm": "0 1px 2px rgba(0,0,0,.06)",
      "md": "0 4px 12px rgba(0,0,0,.08)",
      "lg": "0 10px 24px rgba(0,0,0,.10)"
    },
    "borders": {
      "hairline": "1px",
      "thin": "2px"
    },
    "grid": {
      "columns": 12,
      "gutter": "24px",
      "maxWidth": "1200px"
    }
  },
  "components": {
    "button": {
      "height": "48px",
      "paddingX": "20px",
      "radius": "pill",
      "variants": {
        "primary": {
          "bg": "primary",
          "fg": "neutral-0",
          "border": "primary"
        },
        "secondary": {
          "bg": "neutral-0",
          "fg": "primary",
          "border": "primary"
        },
        "ghost": {
          "bg": "transparent",
          "fg": "primary",
          "border": "transparent"
        }
      }
    },
    "chip": {
      "height": "28px",
      "paddingX": "12px",
      "radius": "pill",
      "border": "hairline",
      "bg": "neutral-100",
      "fg": "primary"
    },
    "card": {
      "padding": "24px",
      "radius": "lg",
      "shadow": "md",
      "border": "hairline",
      "bg": "neutral-0"
    },
    "divider": {
      "color": "primary",
      "thickness": "1px",
      "opacity": 0.25
    },
    "quote": {
      "borderLeft": "2px",
      "borderColor": "accent",
      "bg": "neutral-50",
      "padding": "24px",
      "italic": true
    }
  },
  "states": {
    "focus": {
      "outline": "2px solid #7C0004",
      "offset": "2px"
    },
    "hover": {
      "elevate": "sm",
      "translateY": "-1px"
    },
    "active": {
      "elevate": "none",
      "translateY": "0px",
      "opacity": 0.95
    },
    "disabled": {
      "opacity": 0.5,
      "pointerEvents": "none"
    }
  },
  "accessibility": {
    "minContrastText": 4.5,
    "minContrastLarge": 3.0
  }
}